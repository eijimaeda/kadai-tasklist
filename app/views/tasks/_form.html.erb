  <%= form_for(task) do |f|%>
    <% if task.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% task.errors.full_tasks.each do |task| %>
            <li><%= task %></li>
          <% end %>      
        </ul>
      </div>
    <% end %>
    
    <div>
      <%= f.label :content, 'タスク' %>
      <%= f.text_field :content %>
    </div>
    <div>
      <%= f.label :deadline, '期限' %>
      <%= f.text_field :deadline %>
    </div>
    <%=f.submit '作成' %>
    
  <% end %>